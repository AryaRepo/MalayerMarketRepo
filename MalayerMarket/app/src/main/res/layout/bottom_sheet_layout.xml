<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/bottom_sheet1"
              android:layout_width="match_parent"
              android:layout_height="340dp"
              android:orientation="vertical"
              app:behavior_hideable="true"
              app:behavior_peekHeight="0dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
          />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aaFE1743"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="50dp"
            android:background="#88FFEBEE"
            android:orientation="vertical"/>

        <EditText
            android:id="@+id/edt_phone_forget_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_email_sign_up"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:alpha="1.0"
            android:background="@drawable/edt_sign_in_style"
            android:drawableRight="@drawable/ic_phone_white"
            android:gravity="right|center_vertical"
            android:hint="شماره تلفن همراه"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="0dp"
            android:textColor="@color/icons"
            android:textColorHint="@color/icons"
            android:textSize="@dimen/Edit_text_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/edt_phone_sign_up"
            android:layout_marginRight="50dp"
            android:background="#88FFEBEE"
            android:orientation="vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent">
            <ImageButton
                android:id="@+id/btn_submit_forget_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_correct_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_submit_forget_password"
                android:layout_centerHorizontal="true"
                android:text="تایید"
                android:textColor="@color/icons"
                android:textSize="12sp"
                android:gravity="center"/>


        </RelativeLayout>



    </RelativeLayout>


</LinearLayout>