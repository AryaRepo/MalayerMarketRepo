<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:orientation="horizontal"
        android:padding="@dimen/app_normal_padding2"
        android:weightSum="3">

        <!--Cell 1-->
        <RelativeLayout
            android:id="@+id/sp_cell_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/card_bg"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/cell1_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/img_product_cell_1_sp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/txt_product_name_cell_1_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_product_cell_1_sp"
                    android:ellipsize="end"
                    android:maxEms="15"
                    android:maxLines="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/product_primary_price_cell_1_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_product_name_cell_1_sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/app_normal_padding"
                    android:paddingRight="@dimen/app_normal_padding"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/card_sub_title_text_size"/>

                <TextView
                    android:id="@+id/product_sell_price_cell_1_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_primary_price_cell_1_sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/app_normal_padding"
                    android:paddingRight="@dimen/app_normal_padding"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="@dimen/card_sub_title_text_size"/>

                <TextView
                    android:id="@+id/product_label_cell_1_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txt_product_name_cell_1_sp"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:background="@color/accent"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/icons"
                    android:textSize="@dimen/card_sub_title_text_size"/>


                <RelativeLayout
                    android:id="@+id/cell1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/cell1_btn_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/BasketButtonText"
                        android:textColor="@color/icons"
                        android:textStyle="bold"
                        android:textSize="10sp"/>

                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>


        <!--Cell 2-->
        <RelativeLayout
