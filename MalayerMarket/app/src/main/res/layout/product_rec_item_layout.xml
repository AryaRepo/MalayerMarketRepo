<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="285dp"
    android:layout_margin="8dp"
    android:background="@drawable/card_bg">

    <RelativeLayout
        android:id="@+id/product_item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackgroundBorderless">


        <ImageView
            android:id="@+id/img_product_product_activity_single"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/txt_product_name_product_activity_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_product_product_activity_single"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/primary_text"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/product_primary_price_product_activity_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_product_name_product_activity_single"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/app_normal_padding"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/app_normal_padding2"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/product_sell_price_product_activity_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_primary_price_product_activity_single"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/app_normal_padding"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/app_normal_padding2"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/product_label_product_activity_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_product_name_product_activity_single"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:background="@color/accent"
            android:textStyle="bold"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/icons"
            android:textSize="@dimen/card_sub_title_text_size"/>

        <RelativeLayout
            android:id="@+id/product_add_product"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:clickable="true"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:id="@+id/product_add_product_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal|center_vertical"
                android:text="اضافه به سبد"
                android:textColor="@color/icons"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>