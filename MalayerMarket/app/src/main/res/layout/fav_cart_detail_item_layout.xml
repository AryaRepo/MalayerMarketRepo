<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/fav_line_titles"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e1e1e1"
              android:orientation="horizontal"
              android:weightSum="5">

    <ImageButton
        android:id="@+id/fav_mines"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/my_mines"/>

    <TextView
        android:id="@+id/txt_fav_product_count"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="55"
        android:textColor="@color/primary_text"
        android:textSize="10sp"/>

    <ImageButton
        android:id="@+id/fav_plus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/my_ic_plus"/>


    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#88757575"/>

    <TextView
        android:id="@+id/txt_fav_product_name"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="3"
        android:gravity="center"
        android:text="نام کالا"
        android:textColor="@color/primary_text"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#88757575"/>

    <TextView
        android:id="@+id/txt_order_product_row"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/card_title_text_size"/>

</LinearLayout>

