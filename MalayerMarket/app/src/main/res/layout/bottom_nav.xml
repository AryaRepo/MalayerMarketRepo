<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:id="@+id/mn_bottom"
                android:layout_height="wrap_content"
                android:background="@drawable/new_bottom_bg">



    <RelativeLayout
        android:id="@+id/rel_search_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_toLeftOf="@+id/rel_main_fragment"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:paddingTop="10dp">


        <ImageView
            android:id="@+id/img_search_nav"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            app:srcCompat="@drawable/magnifier"/>

        <TextView
            android:id="@+id/txt_search_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_search_nav"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="جستجو"
            android:textSize="12sp"
            android:textColor="#757575"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_main_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/img_main_fragment_nav"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            app:srcCompat="@drawable/home"/>

        <TextView
            android:id="@+id/txt_main_fragment_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_main_fragment_nav"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12sp"
            android:text="محصولات"
            android:textColor="#757575"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_toRightOf="@+id/rel_main_fragment"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/img_category_nav"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            app:srcCompat="@drawable/menu"/>

        <TextView
            android:id="@+id/txt_category_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_category_nav"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="12sp"
            android:text="دسته بندی"
            android:textColor="#757575"/>
    </RelativeLayout>

</RelativeLayout>