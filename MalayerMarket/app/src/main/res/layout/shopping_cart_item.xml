<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/rel_product_cart_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_product_shopping_cart"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/txt_product_name_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/img_product_shopping_cart"
            android:textColor="#000"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/txt_product_price_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_product_name_shopping_cart"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/img_product_shopping_cart"
            android:textColor="#000"
            android:textSize="13sp"/>


        <ImageButton
            android:id="@+id/btn_decrease_product_shopping_cart"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/txt_product_price_shopping_cart"
            android:layout_margin="8dp"
            android:background="@null"
            app:srcCompat="@drawable/my_mines"/>

        <TextView
            android:id="@+id/txt_product_count_shopping_cart"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/txt_product_price_shopping_cart"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/btn_decrease_product_shopping_cart"
            android:gravity="center"
            android:textColor="#000"/>

        <ImageButton
            android:id="@+id/btn_increase_product_shopping_cart"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/txt_product_price_shopping_cart"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/txt_product_count_shopping_cart"
            android:background="@null"
            app:srcCompat="@drawable/my_ic_plus"/>


        <ImageButton
            android:id="@+id/btn_delete_product_shopping_cart"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            android:layout_below="@id/txt_product_price_shopping_cart"
           android:layout_toLeftOf="@id/img_product_shopping_cart"
            android:background="@null"
            android:tint="@color/primary"
            app:srcCompat="@drawable/ic_empty_cart"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
