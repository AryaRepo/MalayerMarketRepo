<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_category_grid"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/txt_category_title_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_category_grid"
            android:layout_alignRight="@id/img_category_grid"
            android:layout_below="@id/img_category_grid"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="11sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>