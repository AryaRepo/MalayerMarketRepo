<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/order_line_titles_item_lay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#e1e1e1"
              android:orientation="horizontal"
              android:weightSum="3">

    <TextView
        android:id="@+id/txt_order_product_price_item_lay"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="1.25"
        android:gravity="center"
        android:text="2500 تومان"
        android:textColor="@color/primary_text"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#88757575"/>

    <TextView
        android:id="@+id/txt_order_product_count_item_lay"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="5 تا "
        android:textColor="@color/primary_text"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#88757575"/>

    <TextView
        android:id="@+id/txt_order_product_name_item_lay"
        android:layout_width="0dp"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="1.25"
        android:gravity="center_horizontal|center_vertical"
        android:maxEms="15"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="نوشابه خانواده کوکا کولا  15 لیتری"
        android:textColor="@color/primary_text"
        android:textSize="12sp"/>

</LinearLayout>
