<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lin_top_basket"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_close_fav"
            android:layout_width="50dp"
            android:background="@color/primary"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_close"/>

        <TextView
            android:id="@+id/txt_header_fav"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginBottom="10dp"
            android:background="@color/primary"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:text="افزودن سبد علاقمندی"
            android:textColor="#FFF"
            android:textSize="18sp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edt_basket_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/lin_top_basket"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_border"
        android:gravity="center_horizontal|center_vertical"
        android:hint="نام سبد شما"
        android:padding="8dp"
        android:textSize="14sp"
        android:textColor="#000"/>

    <Button
        android:id="@+id/btn_save_basket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_basket_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_new_fav_cart_style"
        android:text="ثبت سبد جدید"
        android:textColor="#fff"
        android:textSize="@dimen/button_text_size"/>
</RelativeLayout>