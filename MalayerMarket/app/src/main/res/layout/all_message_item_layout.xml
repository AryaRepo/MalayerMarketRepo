<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/card_title_all_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#03A9F4"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/line_titles2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/txt_msg_status_all2"
                android:layout_width="0dp"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="وضعیت"
                android:textColor="@color/icons"
                android:textSize="@dimen/card_title_text_size"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f5f5f5"/>

            <TextView
                android:id="@+id/txt_msg_date_all2"
                android:layout_width="0dp"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="تاریخ ارسال"
                android:textColor="@color/icons"
                android:textSize="@dimen/card_title_text_size"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f5f5f5"/>

            <TextView
                android:id="@+id/txt_msg_topic_all2"
                android:layout_width="0dp"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_weight="1"
                android:gravity="center"
                android:text="عنوان پیام"
                android:textColor="@color/icons"
                android:textSize="@dimen/card_title_text_size"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>